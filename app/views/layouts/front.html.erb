<!DOCTYPE html>
<html>
  <head>
    <title><%= @title.present? ? @title : "NightMare Store" %></title>    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= yield :stylesheets %>
  </head>
  <body>
    <%= render "layouts/front/header" %>

    <main>
      <%= yield %>
    </main>

    <%= render "layouts/front/footer" %>

    <%= javascript_include_tag "application" %>
    <%= yield :javascripts %>
  </body>
</html>
