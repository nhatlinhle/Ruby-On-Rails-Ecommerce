<div class="container-fluid">
    <div class="row">
    <div class="col-md-12">
      <div class="card strpied-tabled-with-hover">
        <!-- <div class="card-header ">
          <h4 class="card-title">Striped Table with Hover</h4>
          <p class="card-category">Here is a subtitle for this table</p>
        </div> -->
        <div class="card-body table-full-width table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td>
                    <%= product.sku %>
                  </td>
                  <td>
                    <%= product.name %>
                  </td>
                  <td>
                    <%= product.price %>
                  </td>
                  <td>
                    <%= product.stock_quantity %>
                  </td>
                  <td>
                    <%= product.category.name %>
                  </td>
                  <td>
                    <%= link_to edit_admin_product_path(product), class: "btn btn-sm btn-primary d-flex align-items-center gap-2" do %>
                      <i class="nc-icon nc-ruler-pencil"></i> Edit
                    <% end %>
                    <%= button_to admin_product_path(product), method: :delete, class: "btn btn-sm btn-danger ms-2 d-flex align-items-center gap-2" do %>
                      <i class="nc-icon nc-simple-remove"></i> Delete
                    <% end %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
          
          <%= paginate @products, params: request.query_parameters %>
        </div>
      </div>
    </div>
  </div>
</div>