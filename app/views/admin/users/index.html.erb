<div class="container-fluid">

  <div class="card">
    <div class="card-body">
      <%= form_with url: admin_users_path, method: :get, local: true do %>
        <div class="row">
          <div class="col-md-6 pr-1">
            <div class="form-group">
              <label for="name">Name</label>
              <%= text_field_tag :name, params[:name], class: "form-control" %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="email">Email</label>
              <%= text_field_tag :email, params[:email], class: "form-control" %>
            </div>
          </div>
        </div>
        <div>
          <%= link_to "Create new", new_admin_user_path, class: "btn btn-primary pull-left" %>
          <%= button_tag "Submit", type: "submit", class: "btn btn-info btn-fill pull-right", name: nil %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card strpied-tabled-with-hover">
        <!-- <div class="card-header ">
          <h4 class="card-title">Striped Table with Hover</h4>
          <p class="card-category">Here is a subtitle for this table</p>
        </div> -->
        <div class="card-body table-full-width table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone number</th>
                <th>Birth day</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= user.id %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= user.email %>
                  </td>
                  <td>
                    <%= user.phone_number %>
                  </td>
                  <td>
                    <%= user.birth_day %>
                  </td>
                  <td>
                    <%= link_to edit_admin_user_path(user), class: "btn btn-sm btn-primary d-flex align-items-center gap-2" do %>
                      <i class="nc-icon nc-ruler-pencil"></i> Edit
                    <% end %>

                    <%= button_to admin_user_path(user), method: :delete, class: "btn btn-sm btn-danger ms-2 d-flex align-items-center gap-2" do %>
                      <i class="nc-icon nc-simple-remove"></i> Delete
                    <% end %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
          
          <%= paginate @users, params: request.query_parameters %>
        </div>
      </div>
    </div>
  </div>
</div>